          <h2 class="sub-header">Scenes List</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Scene ID</th>
                  <th>Title</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% @scenes.each do |scene| %>
                  <tr>
                    <td><%= scene.id %></td>
                    <td><%= link_to scene.title, scene_path(scene) %></td>
                    <td><%= link_to "Edit", edit_scene_path(scene) %></td>
                    <td><%= link_to "Delete", scene_path(scene), method: :delete,
                                              data: { confirm: "Are you sure you want to delete this scene?" } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
