<h1>Users List</h1>

<% @users.each do |user| %>
  <div class="row">
    <div class="col-md-2">
      <section class="center">
        
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to user.username, user_path(user) %></h4>
      <p>
        <span class="quiet"><small>Registered <%= time_ago_in_words(user.created_at) %> ago</small></span>
        <li><%= link_to 'Delete this user', user_path(user), method: :delete, 
                  data: { confirm: "Are you sure you want to delete this user and all associated scenes?" } %></li>
      </p>
    </div>
  </div>
  <%= will_paginate %>
<% end %>